# Prevent access to .htaccess file
<Files .htaccess>
    Order allow,deny
    Deny from all
</Files>

# Allow access to specific file types only
<FilesMatch "\.(jpg|jpeg|png|gif|css|js|html|htm|pdf)$">
    Order allow,deny
    Allow from all
</FilesMatch>

# Block access to other files
<FilesMatch "\.(php|pl|py|sh|cgi)$">
    Order allow,deny
    Deny from all
</FilesMatch>
