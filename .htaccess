# Use the following line to activate the URL rewriting engine
RewriteEngine On

# Specify the custom 404 error document
ErrorDocument 404 /javascript/404nf.html

# Ensure directory listings are disabled for security purposes
Options -Indexes

# Add a fallback to the home page if needed
FallbackResource /

# Force HTTPS if your site supports it (uncomment if needed)
# RewriteCond %{HTTPS} off
# RewriteRule ^ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

